<Page x:Class="Videotheque.views.ConsultFilmPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Videotheque.views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ConsultFilmPage">

    <Grid>
        <TextBlock HorizontalAlignment="Right" Margin="0,0,750,402" TextWrapping="Wrap" Text="{Binding Film.Titre}" VerticalAlignment="Bottom"/>
        <TextBlock HorizontalAlignment="Right" Margin="0,0,750,366" TextWrapping="Wrap" Text="{Binding Film.Synopsis}" VerticalAlignment="Bottom"/>
        <TextBlock HorizontalAlignment="Right" Margin="0,0,750,286" TextWrapping="Wrap" Text="{Binding Film.Commentaire}" VerticalAlignment="Bottom"/>



    </Grid>
</Page>
